<div class="bg-gray-900 p-[2rem]">
  <%= form_with(model: @recording, local: true) do |form| %>
    <% if @recording.errors.any? %>
      <div>
        <h2><%= pluralize(recording.errors.count, "error") %> prohibited this recording from being saved:</h2>
        <ul>
          <% @recording.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :sound_url %>
      <%= form.text_field :sound_url, class: "form-control" %>
    </div>

    <div>
      <%= form.label :quality %>
      <%= form.select :quality, ["Low", "Medium", "High"], include_blank: true, class: "form-control" %>
    </div>

    <div>
      <%= form.label :comment %>
      <%= form.text_area :comment, rows: 3, class: "form-control" %>
    </div>

    <div>
      <%= form.label :attribution %>
      <%= form.text_area :attribution, rows: 2, class: "form-control" %>
    </div>

    <div>
      <%= form.label :license_id %>
      <%= form.collection_select :license_id, License.all, :id, :name, prompt: "Select license", class: "form-control" %>
    </div>

    <div>
      <%= form.label :country_id %>
      <%= form.collection_select :country_id, Country.all, :id, :name, prompt: "Select country", class: "form-control" %>
    </div>

    <div>
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
